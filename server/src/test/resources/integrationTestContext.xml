<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="appConfig" class="com.cloudstone.emenu.AppConfig">
        <property name="maps">
            <map>
                <entry key="dbFileName" value="cloudstone.test.db"></entry>
                <entry key="cloudstoneDataDir" value="/tmp"></entry>
            </map>
        </property>
    </bean>

    <bean  id="applicationContextProvider" class="com.cloudstone.emenu.AppContext"></bean>
</beans>