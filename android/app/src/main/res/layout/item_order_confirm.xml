<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp">

        <com.heymenu.widget.AddDishButtonForDialog
            android:id="@+id/qty"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/order_dialog_first_column_margin_right"
            android:layout_width="@dimen/order_dialog_first_column_width"
            android:layout_height="match_parent">
        </com.heymenu.widget.AddDishButtonForDialog>
        <TextView
            android:id="@+id/name"
            android:text="@string/item"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_regular"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/price"
            android:text="@string/price"
            android:textStyle="bold|italic"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_regular"
            android:gravity="right|center_vertical"
            android:layout_width="@dimen/order_dialog_third_column_width"
            android:layout_height="match_parent" />

</LinearLayout>